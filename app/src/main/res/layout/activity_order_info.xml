<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sam.pizza.DeliveryActivities.OrderInfoActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/delivery_log_out_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/mainBlack"
            android:text="Log out"
            android:textAllCaps="true"
            android:textColor="@color/mainWhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/delivery_orders_list2_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/delivery_log_out_button3"
            android:layout_marginTop="16dp"
            android:background="@color/mainBlack"
            android:text=" Delivery List "
            android:textAllCaps="true"
            android:textColor="@color/mainWhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/delivery_finished_orders2_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/delivery_log_out_button3"
            android:layout_marginTop="16dp"
            android:background="@color/mainBlack"
            android:text=" Finished Orders "
            android:textAllCaps="true"
            android:textColor="@color/mainWhite"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#6432645"
            android:textStyle="bold"
            android:textColor="@color/mainBlack"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/mainBlack"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Delivery Time: 12:30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered:\nPepperoni  x  1\nhawaiian  x  2\nCoke  x  3"
            android:textColor="@color/mainBlack"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\n Total: $80"
            android:textColor="@color/mainBlack"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nCustomer Info:"
            android:textAllCaps="true"
            android:textColor="@color/mainBlack"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Thao Smile\n0928555555\n702 Nguyen Van Linh, Ward. Tan phong, Dist. 7\n"
            android:textColor="@color/mainBlack" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nDelivering"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/mainBlack"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
